using System;
//ponerlo para poder usar LISTAS
using System.Collections.Generic;



public class Program
{
	public static void Main()
	{
		//creamos la lista
		List<int> numerosFavoritos = new List<int>();
	
		int tamDeseado;
		Console.WriteLine("¿Cuántos números favoritos tienes?");
		tamDeseado = Convert.ToInt32(Console.ReadLine());
									 
		for (int i = 0; i < tamDeseado; i++)
									 
		 {
			Console.WriteLine("Introduce tu " + (i+1) + "ª número favorito");
			 numerosFavoritos.Add(Convert.ToInt32(Console.ReadLine()));
		 }
		


	//para recorrer la lista
		for (int i = 0; i < numerosFavoritos.Count; i++)
			 {
				 Console.WriteLine("Mi " + (i+1) + "º número favorito es: " + numerosFavoritos[i]);
			 }
	
		  }	
}
